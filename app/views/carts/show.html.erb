<h2>Your Pragmatic Cart</h2>
<head>
<style>
li {
  display: block;
}
</style>
</head>
<div>
    <% @cart.line_items.each do |item| %>
        <div class="entry">
          <span style="margin-left:280px">
            <%= button_to "x", item, :method => :delete %>
          </span>
          <div class = "images">
            <%= image_tag(item.product.image_url, :size => "10x100") %>      
          </div>

          <div class="price_line">
            <h3><%= item.quantity %></h3> pháº§n <h3><%= item.product.name %></h3> 
            <span class="price"><%= item.product.price %></span>
          </div>
        </div>

    <% end %>
    <tr class="total_line">
          <td colspan="2">Total</td>
          <td class="total_cell"><%= number_to_currency(@cart.total_price) %></td>
        </tr>
    <%= button_to 'Checkout', new_order_path, :method => :get %><br>
</div>
